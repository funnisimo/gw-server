{
	"include": ["src"],
	"exclude": ["src/**/*.spec.ts"],
	"compilerOptions": {
		"strict": true,
		"outDir": "js",
		"target": "es2019",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noEmitOnError": true,
		"incremental": true,
		"declaration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true
	}
}
